{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist/",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@*": ["src/*"],
    }
  },
  "include": ["src"]
}
